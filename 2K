  <!-- ===== CSS ===== -->
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background: #0f0f0f;
      color: #fff;
    }

    header {
      background: #000;
      padding: 15px;
      text-align: center;
      font-size: 22px;
      font-weight: bold;
    }

    .container {
      max-width: 900px;
      margin: auto;
      padding: 20px;
    }

    .card {
      background: #1c1c1c;
      padding: 20px;
      margin-bottom: 20px;
      border-radius: 6px;
    }

    button {
      background: #e50914;
      border: none;
      color: #fff;
      padding: 12px;
      font-size: 16px;
      cursor: pointer;
      border-radius: 4px;
      margin-top: 10px;
    }

    button:hover {
      opacity: 0.85;
    }

    .hidden {
      display: none;
    }

    iframe {
      border-radius: 6px;
    }
  </style>

  <!-- ===== JAVASCRIPT ===== -->
  <script>
    function mostrar(secao) {
      document.querySelectorAll(".secao").forEach(s => s.classList.add("hidden"));
      document.getElementById(secao).classList.remove("hidden");
    }

    function verificarAcesso() {
      const ativo = localStorage.getItem("assinante");
      if (ativo === "true") {
        mostrar("conteudo");
      } else {
        mostrar("home");
      }
    }

    function liberarAcesso() {
      localStorage.setItem("assinante", "true");
      mostrar("conteudo");
    }

    function sair() {
      localStorage.removeItem("assinante");
      mostrar("home");
    }

    window.onload = verificarAcesso;
  </script>
</head>

<body>

<header>2K.com</header>

<div class="container">

  <!-- ===== HOME ===== -->
  <div id="home" class="secao card hidden">
    <h2>Filmes e vídeos exclusivos</h2>
    <p>Acesso ilimitado por apenas <strong>R$ 4,99/mês</strong>.</p>
    <button onclick="mostrar('assinatura')">Assinar agora</button>
  </div>

  <!-- ===== ASSINATURA ===== -->
  <div id="assinatura" class="secao card hidden">
    <h2>Assinatura Mensal</h2>
    <p>Plano único — R$ 4,99 / mês</p>

    <!-- SUBSTITUA PELO LINK REAL DO MERCADO PAGO -->
    <a href="https://link.mercadopago.com.br/SEU_LINK_AQUI" target="_blank">
      <button>Pagar agora</button>
    </a>

    <hr>

    <p>Após o pagamento, clique abaixo:</p>
    <button onclick="liberarAcesso()">Já paguei</button>
  </div>

  <!-- ===== CONTEÚDO BLOQUEADO ===== -->
  <div id="conteudo" class="secao card hidden">
    <h2>Área do Assinante</h2>

    <h3>Filme 1</h3>
    <iframe width="100%" height="400"
      src="https://www.youtube.com/embed/SEU_VIDEO_ID"
      allowfullscreen>
    </iframe>

    <br><br>
    <button onclick="sair()">Sair</button>
  </div>

</div>

</body>
